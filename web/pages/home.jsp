                                            <th><font size="2"/>Jenis Obat</th>
                                            <th><font size="2"/>Stok</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% a = 1;
                                            for (int i = 0; i < 5; i++) {
                                            if (rs.next()) {  
                                        %> 
                                        <tr>
                                            <td><font size="2"/><%= a %></td>
                                            <td><font size="2"/><%= rs.getString("nama_obat") %></td>
                                            <td><font size="2"/><%= rs.getString("kategori") %></td>
                                            <td><font size="2"/><%= rs.getString("jenis") %></td>
                                            <td><font size="2"/><%= rs.getString("stok") %></td>
                                        </tr>
                                        <% 
                                            }
                                            a++; }
                                            stmt.close();
                                            conn.close();
                                            } catch (Exception e){
