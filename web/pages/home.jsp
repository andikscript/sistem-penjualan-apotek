                        <%! 
                            Connection conn;
                            Statement stmt;
                            ResultSet rs;
                            int a;  %>
                            
                            
                            <% try {
                                Class.forName("com.mysql.jdbc.Driver");
                                conn = DriverManager.getConnection("jdbc:mysql://localhost/farmasi","root","");
                                stmt = conn.createStatement();
                                String sql = "select nama_obat, kategori, jenis, stok from detail_obat INNER JOIN obat USING (id_obat) INNER JOIN kategori USING (id_kategori) INNER JOIN jenis USING (id_jenis) INNER JOIN stok USING (id_stok) ORDER BY id_detail_obat DESC";
                                rs = stmt.executeQuery(sql);
                        %>                        
